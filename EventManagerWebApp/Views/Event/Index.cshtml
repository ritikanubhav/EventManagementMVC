@model ICollection<EventManager.Domain.Entities.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
                Description
            </th>
            <th>
                DateAndTime
            </th>
            <th>
                Location
            </th>
            <th>
                MaxAttendees
            </th>
            <th>
                Ticket Price
            </th>
            <th>
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAttendees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this event?')" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
